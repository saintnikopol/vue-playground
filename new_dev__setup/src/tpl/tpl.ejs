<html>
    <head>
      <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
      <meta http-equiv="expires" content="0">
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <title>Список книг</title>

    </head>
    <body>

    <h1>Список книг</h1>
    <div id="app">
        <ol>
            <li v-for="todo in todos">
                <router-link :to="'/authors/' + todo.author + '/books/' + todo.booksName" v-bind:id="todo.id"
                             v-bind:booksName="todo.booksName">{{todo.booksName}}</router-link>

                <router-link :to="'/authors/' + todo.author" v-bind:id="todo.id"
                             v-bind:author="todo.author">{{todo.author}}</router-link>
            </li>
        </ol>
        <div>
            <router-view></router-view>
        </div>

    </div>

</body>

  </html>
